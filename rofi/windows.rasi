@theme "gruvbox-dark-soft"

configuration {
    font: "Iosevka Nerd Font Bold 18";
    show-icons: true;
}

window {
    padding: 5px;
    border: 2px;
    border-radius: 10px;
    width: 900px;
}

inputbar {
    padding: 5px;
}

listview {
    columns: 1;
}

element {
    padding: 5px;
    border-radius: 10px;
}

element-icon {
    size: 18px;
}