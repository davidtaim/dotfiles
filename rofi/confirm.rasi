@import "themes/catppuccin-mocha.rasi"

* {
    background-color: @base;
    color: @text;
}

configuration {
    font: "Iosevka Nerd Font Bold 30";
}

window {
    children: [message, listview];
    padding: 5px;
    border: 2px;
    border-radius: 10px;
    border-color: @yellow;
    width: 350px;
}

textbox {
    horizontal-align: 0.5;
}

listview {
    columns: 1;
    lines: 2;
}

element {
    padding: 5px;
    border-radius: 10px;
}

element selected normal {
    background-color: @yellow;
    color: @base;
}

element-text, element-icon {
    background-color: inherit;
    color: inherit;
}

element-text {
    horizontal-align: 0.5;
}
