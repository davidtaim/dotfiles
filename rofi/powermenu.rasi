@theme "gruvbox-dark-soft"

configuration {
    font: "Iosevka Nerd Font Bold 30";
}

window {
    children: [message, listview];
    padding: 5px;
    border: 2px;
    border-radius: 10px;
    width: 370px;
}

textbox {
    horizontal-align: 0.5;
}

listview {
    columns: 1;
    lines: 3;
}

element {
    padding: 5px;
    border-radius: 10px;
}

element-text {
    horizontal-align: 0.5;
}